<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.devpass.spaceapp">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SpaceApp">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${apiKey}"/>

        <activity
            android:name="com.devpass.spaceapp.presentation.launchList.LaunchListActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".presentation.LaunchActivity"/>


        <activity android:name=".presentation.LaunchDetailsActivity"/>
        <activity android:name=".presentation.RocketDetailsActivity"/>
        <activity android:name=".presentation.LaunchpadDetailsActivity"/>
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>
